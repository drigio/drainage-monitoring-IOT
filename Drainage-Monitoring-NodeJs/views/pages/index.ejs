<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/head") %>
</head>

<body>

    <script>
        $(document).ready(function () {
            var my_div = $("#level");

            setInterval(() => {
                $.ajax({
                        url: "/data"
                    })
                    .done(function (data) {
                        var dist = data.dist;
                        //console.log("Sample of data:", data);
                        if (parseInt(dist[0]) > 11) {
                            $('#level1').html("Good Level");
                        } else if (parseInt(dist[0]) <= 11 && parseInt(dist[0]) > 8) {
                            $('#level1').html("Normal");
                        } else if (parseInt(dist[0]) >= 6 && parseInt(dist[0]) <= 8) {
                            $('#level1').html("Above Normal!");
                        } else {
                            $('#level1').html("OverFlow!");
                        }
                        // Drainage 2
                        if (parseInt(dist[1]) > 11) {
                            $('#level2').html("Good Level");
                        } else if (parseInt(dist[1]) <= 11 && parseInt(dist[1]) > 8) {
                            $('#level2').html("Normal");
                        } else if (parseInt(dist[1]) >= 6 && parseInt(dist[1]) <= 8) {
                            $('#level2').html("Above Normal!");
                        } else {
                            $('#level2').html("OverFlow!");
                        }
                        // Drainage 3
                        if (parseInt(dist[2]) > 11) {
                            $('#level3').html("Good Level");
                        } else if (parseInt(dist[2]) <= 11 && parseInt(dist[2]) > 8) {
                            $('#level3').html("Normal");
                        } else if (parseInt(dist[2]) >= 6 && parseInt(dist[2]) <= 8) {
                            $('#level3').html("Above Normal!");
                        } else {
                            $('#level3').html("OverFlow!");
                        }
                    });
            }, 3000);
        });
    </script>

    <header>
        <%- include ("../partials/header") %>
    </header>

    <main>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <h1 class="card-header display-4 text-center">Drainage Line 1</h1>
                        <div class="card-body">
                            <p class="card-text text-center">The Water Level is <div id="level1"> Good. </div>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <h1 class="card-header display-4 text-center">Drainage Line 2</h1>
                        <div class="card-body">
                            <p class="card-text text-center">The Water Level is <div id="level2"> Good. </div>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="" style="visibility: hidden;">
                    <div class="card">
                        <h1 class="card-header display-4">Drainage Line 3</h1>
                        <div class="card-body">
                            <p class="card-text text-center">The Water Level is <div id="level3"> Good. </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <br />
    <br />
    <br />

    <footer>
        <%- include ("../partials/footer") %>
    </footer>

    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
